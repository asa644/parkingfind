
<h1><%= @chat_room.title %></h1>
<div class = "container" style="margin-bottom: 10px;"">
  <div class="scroll" id="messages" style="margin-top: 100px" data-chat-room-id="<%= @chat_room.id %>">
    <%= render @chat_room.messages %>
  </div>
  <hr>
  <%= form_for  @message, url: '#' do |f| %>
    <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
    <div class="form-group">
      <h3>Your message:</h3>
        <div class="form-inline">
          <div id="width_of_chat">
            <%= f.text_field :body, class: 'form-control', style:"width: 300px", :autocomplete => :off %>
            <%= f.submit "Post", class: 'btn btn-primary btn-lg' %></div>
          </div>
      <small class="text-muted">From 2 to 1000 characters</small>
    </div>
  <% end %>
</div>
