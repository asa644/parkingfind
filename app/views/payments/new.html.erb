<div class="container-fluid">
  <div class="row bg-grey">
    <div class="col-lg-3 col-lg-offset-4  booking-form-book py2 text-center" style="background-color:#b9b2b2">
      <h1>Book a space</h1>
        <%= form_tag parking_spot_booking_payments_path(@booking) do %>
          <article>
            <label class="amount">
              <span>Amount: <%= humanized_money_with_symbol(@booking.total_price) %></span>
            </label>
          </article>

          <div class="test">
            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-name="Parking Find"
              data-description="parking id: <%= @booking.id %>"
              data-email="<%= current_user.email %>"
              data-amount="<%= @booking.total_price_cents %>"
              data-currency="USD">
            </script>
          </div>
        <% end %>
    </div>
  </div>
</div>
