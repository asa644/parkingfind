<style type="text/css">
  body {
    background: #eaeaea;
}
.navbar-wagon.navbar-wagon-fixed {
    background-color: #363d61;
}
</style>

<br>
<div class='text-center' style="background:white;padding-top: 130px;background: #eaeaea;">
  <div class="dashboardwelcome" style="margin-left: 250px;margin-right: 250px;background: #82908d;color: white;padding-top: 4px;padding-bottom: 15px;">
    <h2>Hello <%= @user.email %>,</h2>
    <h4>Welcome to your Dashboard</h4>

    <% if @user.bookings.empty? %>
        <p>You haven't booked any parking spots</p>
        <%= link_to "Check all our parking spots !", parking_spots_path, :class => "btn btn-info"  %>
    <% else %>
      <%= link_to 'View my bookings', bookings_path, :class => "btn btn-info" %>
      <%= link_to "Check all our parking spots !", parking_spots_path, :class => "btn btn-info" %>
    <% end %>

    <h4>Your parking slots</h4>
    <%= link_to "Create a Parking spot", new_parking_spot_path, :class => "btn btn-info" %>
  </div>

<br><br>
  <% if @user.parking_spots.empty? %>
    <p>You don't have any parking spots</p>
  <% else %>
    <% @user.parking_spots.each do |parking_spot| %>
    <hr>
      <div class="row" style="margin-left: 50px;margin-right: 0px;">
        <div class="col-md-3">
          <%= cl_image_tag parking_spot.photo, height: 130, width: 300, crop: :fill %>
        </div>

        <div class="col-md-3">
          <h5 style="text-align: left;padding-left: 150px;"><strong>Price:</strong> <%= parking_spot.price %></h5>
          <h5 style="text-align: left;padding-left: 150px;"><strong>City:</strong> <%= parking_spot.city %></h5>
          <h5 style="text-align: left;padding-left: 150px;"><strong>Country:</strong> <%= parking_spot.country %></h5>
        </div>

        <div class="col-md-3">
          <h5 style="text-align: left;padding-left: 100px;"><strong>Address:</strong> <%= parking_spot.street_address %></h5>
          <h5 style="text-align: left;padding-left: 100px;"><strong>Number of spots:</strong> <%= parking_spot.number_of_spots %></h5>
          <h5 style="text-align: left;padding-left: 100px;"><strong>Description:</strong> <%= parking_spot.description %></h5>
        </div>

        <div class="col-md-3" style="margin-top: 40px">
          <p class="btn btn-danger"><%= link_to "Edit", edit_parking_spot_path(parking_spot), style: "color: white;" %></p>
          <p class="btn btn-success"><%= link_to "Show", parking_spot_path(parking_spot), style: "color: white;" %></p>
          <p class="btn btn-danger"><%= link_to "Delete", parking_spot_path(parking_spot), { style: "color: white;",  method: :delete }  %></p>
        </div>

      </div>
      <hr>
    <% end %>
  <% end %>
<br>

