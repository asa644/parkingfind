<div class='container'>
  <h1>Hello <%= @user.email %>?</h1>
  <p>Here is where users may book or offer parking spots!!!</p>
  <!-- list users bookings -->
  <h2>Your bookings</h2>

  <% if @user.bookings.empty? %>
    <p>You haven't booked any parking spots</p>
  <% else %>
    <% count = 1 %>
    <% @user.bookings.each do |booking| %>
     <p> <%= "Your booking number #{count}: "%></p>
      <p> <%= "Starts on the: #{booking.start_at} "%></p>
      <p> <%= "Ends on the: #{booking.end_at}"%></p>
      <p> <%= "Your booking total price is: #{booking.total_price}"%></p>
      <% count += 1 %>
    <% end %>
  <% end %>

  <h5><%= link_to "Create a Parking spot", new_parking_spot_path %></h5>
  <% if @user.parking_spots.empty? %>
    <p>You don't have any parking spots</p>
  <% else %>
    <% @user.parking_spots.each do |parking_spot| %>
      <p><%= parking_spot.street_address %></p>
      <%= link_to "Edit", edit_parking_spot_path(parking_spot) %>
      <%= link_to "Delete", parking_spot_path(parking_spot), method: :delete %>
    <% end %>
  <% end %>
