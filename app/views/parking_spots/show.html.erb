<div class="container text-center" style="padding-top:100px">
  <h3><%= @parking_spot.street_address %></h3>
  <% ba = @parking_spot.user_id %>
  <div class="content col-md-6" style="padding-left: 150px">
    <p style="text-align: left"><strong>Address:</strong> <%= @parking_spot.street_address %></p>
    <p style="text-align: left"><strong>Description:</strong> <%= @parking_spot.description %></p>
    <p style="text-align: left"><strong>City:</strong> <%= @parking_spot.city %></p>
    <p style="text-align: left"><strong>Country:</strong> <%= @parking_spot.country %></p>
    <p style="text-align: left"><strong>Price:</strong> <%= @parking_spot.price %></p>
    <p style="text-align: left"><strong>Number of spots:</strong> <%= @parking_spot.number_of_spots %></p>
    <button><%= link_to "Back", profile_path %></button>
    <button><%= link_to "Edit", edit_parking_spot_path(@parking_spot) %></button>
    <button><%= link_to "Delete", parking_spot_path(@parking_spot), method: :delete %></button>



      <div class="confirm">
        <h2>Booking Comfirm</h2>
          <% @parking_spot.bookings.accepted.each do |booking| %>

            <p>Booking id: <%= booking.id %></p>
            <p>
            <%= link_to booking_chat_rooms_path(booking), style: "color:red", target: '_blank' do %>
              Chat
            <% end %>
          </p>

          <% end %>
      </div>

    <% if current_user.id == @parking_spot.user_id %>

      <div id="pending">
        <h2>Pending</h2>
        <br>
        <% @parking_spot.bookings.pending.each do |booking| %>
        <div class="booking-<%= booking.id %>" id="enline">
          <p>
            <%= link_to accepted_booking_path(booking), remote: true, class: "booking-confirm-#{booking.id}" do %>
              Confirmed
            <% end %>
          </p>

          <p style="color:transparent">transparent</p>

          <p>
            <%= link_to rejected_booking_path(booking), remote: true, class: "booking-cancel-#{booking.id}" do %>
              Cancelled
            <% end %>
          </p>
          <p style="color:transparent">transparent</p>
          <p>
            <%= link_to booking_chat_rooms_path(booking), class: "booking-cancel-#{booking.id}", target: '_blank' do %>
              Chat
            <% end %>
          </p>
        </div>
        <% end %>
      </div>

      <div class="cancel">
        <h3>Booking Cancel</h3>
        <% @parking_spot.bookings.rejected.each do |booking| %>
          <p>
            <%= link_to accepted_booking_path(booking), remote: true, class: "booking-confirm-#{booking.id}", style: "color:red" do %>
              Confirmed
            <% end %>
          <p>
        <% end %>
      </div>
    <% end %>

    <h2>Reviews</h2>
    <% @parking_spot.reviews.each do |review| %>
      <p><%= review.description %></p>
      <p>
        <% review.rating.times do %>
          <i class="fa fa-star" aria-hidden="true"></i>
        <% end %>
      </p>
    <% end %>
    <%= cl_image_tag @parking_spot.photo, height: 300, width: 400, crop: :fill %>
  </div>


  <div class="col-md-6">
    <div id="map" style="width: 100%; height: 600px;"></div>
  </div>
</div>

<%= javascript_include_tag "https://maps.google.com/maps/api/js?key=AIzaSyBAbVBfyj-wKN5_BQGC7LsP8hjV2GuH_WE" %>
<%= javascript_include_tag "https://cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/markerclusterer/src/markerclusterer_compiled.js" %>
<%= javascript_include_tag "https://cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js" %>


<% content_for(:after_js) do %>
  <%= javascript_tag do %>

      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(
          [{
            "lat": <%= @parking_spot.latitude %>,
            "lng": <%= @parking_spot.longitude %>
          }]
        );
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(18);
        }
      });

  <% end %>
<% end %>

<br><br>


