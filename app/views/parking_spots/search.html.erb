<style type="text/css">
  .navbar-wagon {
    background: #497394;
}
</style>

<div class="text-center">
  <h2>Search results for <%= params[:search].capitalize %>:</h2>
</div>
<br>
<div class="container" style="padding-top:30px;background: #e0e0e0;padding-bottom: 35px;">
    <div class="col-md-6" style="height: 100%;overflow: hidden;overflow-y: scroll;">
    <div class="scroll">
     <% if @parking_spots.blank? %>
      <h3>Nous avons pas de parking</h3>
      <h4>A cette endroit</h4>
     <% else %>

      <% @parking_spots.each do |parking_spot| %>
        <% bab = parking_spot.user_id %>

          <div class="row">
            <div class="col-md-4">

              <% if User.find(bab).facebook_picture_url == nil && User.find(bab).avatar == true  %>
                <%= cl_image_tag User.find(bab).avatar, height: 80, width: 80, crop: :fill, style: "border-radius: 50%;position:relative;left:33px;top: 12px;" %>
              <% elsif User.find(bab).facebook_picture_url != nil  %>
                <%= cl_image_tag User.find(bab).facebook_picture_url, height: 80, width: 80, crop: :fill, style: "border-radius: 50%" %>
              <% else %>
                <%= image_tag "http://placehold.it/30x30", height: 80, width: 80, crop: :fill, style: "border-radius: 50%;position:relative;left:33px;top: 12px;" %>
              <% end %>

            </div>



            <div class="col-md-4">
              <h6><strong>Address:</strong> <%= parking_spot.street_address %></h6>
              <h6><strong>City:</strong> <%= parking_spot.city %></h6>
              <h6><strong>Country:</strong> <%= parking_spot.country %></h6>
            </div>

            <div class="col-md-4">
              <%= cl_image_tag parking_spot.photo, height: 90, width: 90, crop: :fill, style: "position:relative;left:33px;top: 12px;" %>
            </div>
          </div>
          <hr>


      <% end %>
      <% end %>
      </div>
    </div>

    <div class="col-md-6" id="smappux">
      <div id="map" class="map_structure" style="width: 100%;height: 530px;position: fixed !important;"></div>
      <% content_for(:after_js) do %>
        <%= javascript_tag do %>

            var handler = Gmaps.build('Google');
            handler.buildMap({ internal: { id: 'map' } }, function() {
              markers = handler.addMarkers(<%= raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
                if (markers.length == 0) {
                  handler.getMap().setZoom(2);
                }
                else if (markers.length == 1) {
                  handler.getMap().setZoom(14);
                }
              });

        <% end %>
      <% end %>
    </div>
</div>

<br><br>



















